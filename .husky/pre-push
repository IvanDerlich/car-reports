#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

echo "🧪 Running tests unit tests..."
npm test
if [ $? -ne 0 ]; then
    echo "❌ Unit Tests failed! Please fix the failing tests before pushing."
    exit 1
fi
echo "✅ Unit Tests passed!"

echo "🧪 Running tests e2e tests..."
npm run test:e2e
if [ $? -ne 0 ]; then
    echo "❌ E2E Tests failed! Please fix the failing tests before pushing."
    exit 1
fi
echo "✅ E2E Tests passed!"

echo "🏗️ Building project..."
npm run build
if [ $? -ne 0 ]; then
    echo "❌ Build failed! Please fix the build errors before pushing."
    exit 1
fi
echo "✅ Build successful!"

echo "✅ All pre-push checks passed!" 